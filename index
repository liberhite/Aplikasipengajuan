    <!-- JAVASCRIPT -->
    <script>
        // ==========================================
        // CONFIGURATION - GANTI INI!
        // ==========================================
        const CONFIG = {
            // GANTI dengan URL Web App lu setelah deploy!
            API_URL: 'https://script.google.com/macros/s/AKfycbxXXXXXXXXXXXXXXXXXXXXXXXX/exec',
            
            MOCK_USER: {
                email: 'ppk.budi@kemenkeu.go.id',
                nama: 'Budi Santoso, S.E.',
                nip: '198501152010011002',
                satker: 'Direktorat Pengadaan'
            }
        };

        // ==========================================
        // UTILITY FUNCTIONS
        // ==========================================
        
        function showLoading(show) {
            document.getElementById('loadingOverlay').classList.toggle('active', show);
        }

        function showError(message) {
            alert('Error: ' + message);
            console.error(message);
        }

        // ==========================================
        // API CALLS (FETCH REPLACEMENT)
        // ==========================================
        
        async function apiCall(action, params = {}, method = 'GET', postData = null) {
            showLoading(true);
            
            try {
                let url = `${https://script.google.com/macros/s/AKfycbwQlV0YFQELW4iMPnIIukInzn_9tM_MSJXbrnoIJ1-Gk4L8HXB5b9_2zAzUSMFiF1J2FA/exec}?action=${action}`;
                
                // Add query params
                Object.keys(params).forEach(key => {
                    url += `&${key}=${encodeURIComponent(params[key])}`;
                });

                const options = {
                    method: method,
                    headers: {
                        'Content-Type': 'application/json',
                    }
                };

                if (postData) {
                    options.body = JSON.stringify(postData);
                }

                const response = await fetch(url, options);
                const data = await response.json();
                
                showLoading(false);
                return data;
                
            } catch (error) {
                showLoading(false);
                showError('Gagal konek ke server: ' + error.message);
                throw error;
            }
        }

        // Wrapper functions (ganti google.script.run)
        async function getDashboardData(emailPPK) {
            return await apiCall('getDashboardData', { emailPPK });
        }

        async function getNextNomorProses() {
            return await apiCall('getNextNomorProses');
        }

        async function submitPengajuanAPI(data) {
            return await apiCall('submitPengajuan', {}, 'POST', data);
        }

        async function uploadFileAPI(base64Data, filename, mimeType) {
            return await apiCall('uploadFile', {}, 'POST', { base64Data, filename, mimeType });
        }

        // ==========================================
        // UI FUNCTIONS
        // ==========================================
        
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page').forEach(page => {
                page.classList.add('hidden');
            });
            
            // Show target
            document.getElementById(pageId).classList.remove('hidden');
            
            // Update nav active state
            document.querySelectorAll('.nav-item').forEach(item => {
                item.classList.remove('bg-blue-700', 'text-white');
                item.classList.add('text-blue-100');
            });
            
            event.currentTarget.classList.add('bg-blue-700', 'text-white');
            event.currentTarget.classList.remove('text-blue-100');
            
            // Load data if needed
            if (pageId === 'dashboard') {
                loadDashboardData();
            } else if (pageId === 'form') {
                loadNomorProses();
            } else if (pageId === 'history') {
                loadHistory();
            }
        }

        // ==========================================
        // DATA LOADING
        // ==========================================
        
        async function loadDashboardData() {
            try {
                const response = await getDashboardData(CONFIG.MOCK_USER.email);
                
                if (response.success) {
                    // Update stats
                    document.getElementById('statTotal').textContent = response.stats.total;
                    document.getElementById('statDiproses').textContent = response.stats.diproses;
                    document.getElementById('statSelesai').textContent = response.stats.selesai;
                    document.getElementById('statDitolak').textContent = response.stats.ditolak;
                    
                    // Update recent activity
                    const recent = response.pengajuan.slice(0, 5);
                    const html = recent.length ? recent.map(p => `
                        <div class="flex justify-between items-center py-3 border-b last:border-0">
                            <div>
                                <p class="font-medium text-gray-800">${p.namaPaket}</p>
                                <p class="text-sm text-gray-500">${p.nomorProses}</p>
                            </div>
                            <span class="px-3 py-1 rounded-full text-xs font-semibold ${getStatusColor(p.status)}">
                                ${p.status}
                            </span>
                        </div>
                    `).join('') : '<p class="text-gray-500">Belum ada pengajuan</p>';
                    
                    document.getElementById('recentActivity').innerHTML = html;
                }
            } catch (e) {
                console.error('Error loading dashboard:', e);
            }
        }

        async function loadNomorProses() {
            try {
                const response = await getNextNomorProses();
                if (response.success) {
                    document.getElementById('nomorProses').value = response.nomorProses;
                }
            } catch (e) {
                console.error('Error loading nomor:', e);
            }
        }

        async function loadHistory() {
            try {
                const response = await getDashboardData(CONFIG.MOCK_USER.email);
                if (response.success) {
                    updateHistoryTable(response.pengajuan);
                }
            } catch (e) {
                console.error('Error loading history:', e);
            }
        }

        function updateHistoryTable(data) {
            const tbody = document.getElementById('historyTableBody');
            
            if (!data.length) {
                tbody.innerHTML = '<tr><td colspan="6" class="px-6 py-4 text-center text-gray-500">Belum ada data</td></tr>';
                return;
            }
            
            tbody.innerHTML = data.map(row => `
                <tr class="hover:bg-gray-50">
                    <td class="px-6 py-4 font-medium text-gray-900">${row.nomorProses}</td>
                    <td class="px-6 py-4 text-gray-600">${formatDate(row.tanggal)}</td>
                    <td class="px-6 py-4 text-gray-800">${row.namaPaket}</td>
                    <td class="px-6 py-4 text-gray-600">Rp ${formatNumber(row.hpsNominal)}</td>
                    <td class="px-6 py-4 text-gray-600">${row.namaPP || '-'}</td>
                    <td class="px-6 py-4">
                        <span class="px-3 py-1 rounded-full text-xs font-semibold ${getStatusColor(row.status)}">
                            ${row.status}
                        </span>
                    </td>
                </tr>
            `).join('');
        }

        // ==========================================
        // FORM HANDLING
        // ==========================================
        
        async function handleFileSelect(input, targetId) {
            if (!input.files.length) return;
            
            const file = input.files[0];
            const maxSize = 5 * 1024 * 1024; // 5MB
            
            if (file.size > maxSize) {
                alert('File terlalu besar. Maksimal 5MB.');
                input.value = '';
                return;
            }
            
            showLoading(true);
            
            try {
                const base64 = await fileToBase64(file);
                const response = await uploadFileAPI(base64, file.name, file.type);
                
                if (response.success) {
                    document.getElementById(targetId).textContent = `âœ“ ${file.name}`;
                    document.getElementById(targetId).classList.remove('hidden');
                    document.getElementById(targetId).dataset.url = response.fileUrl;
                }
            } catch (e) {
                alert('Gagal upload file');
            } finally {
                showLoading(false);
            }
        }

        function fileToBase64(file) {
            return new Promise((resolve, reject) => {
                const reader = new FileReader();
                reader.onload = () => resolve(reader.result);
                reader.onerror = reject;
                reader.readAsDataURL(file);
            });
        }

        async function submitPengajuan() {
            // Validasi
            const required = ['namaPaket', 'uraianPekerjaan', 'jenisPengadaan', 'hpsNominal', 'jangkaWaktu'];
            for (let field of required) {
                if (!document.getElementById(field).value) {
                    alert('Mohon lengkapi semua field wajib');
                    return;
                }
            }
            
            const formData = {
                nomorProses: document.getElementById('nomorProses').value,
                tanggal: document.getElementById('tanggal').value || new Date().toISOString().split('T')[0],
                namaPaket: document.getElementById('namaPaket').value,
                uraianPekerjaan: document.getElementById('uraianPekerjaan').value,
                emailPPK: CONFIG.MOCK_USER.email,
                namaPPK: CONFIG.MOCK_USER.nama,
                satker: CONFIG.MOCK_USER.satker,
                jenisPengadaan: document.getElementById('jenisPengadaan').value,
                hpsNominal: document.getElementById('hpsNominal').value,
                jangkaWaktu: document.getElementById('jangkaWaktu').value,
                notaDinasUrl: document.getElementById('notaDinasUrl').dataset.url || '',
                hpsUrl: document.getElementById('hpsUrl').dataset.url || '',
                kontrakUrl: document.getElementById('kontrakUrl').dataset.url || '',
                spesifikasiUrl: document.getElementById('spesifikasiUrl').dataset.url || ''
            };
            
            try {
                const btn = document.getElementById('btnSubmit');
                btn.disabled = true;
                btn.innerHTML = '<i class="fas fa-spinner fa-spin mr-2"></i>Menyimpan...';
                
                const response = await submitPengajuanAPI(formData);
                
                if (response.success) {
                    document.getElementById('successNomor').textContent = response.nomorProses;
                    document.getElementById('successPPName').textContent = response.assignedPP.nama;
                    document.getElementById('successPPEmail').textContent = response.assignedPP.email;
                    document.getElementById('successModal').classList.remove('hidden');
                    
                    document.getElementById('pengajuanForm').reset();
                } else {
                    alert('Error: ' + response.error);
                }
            } catch (e) {
                alert('Gagal submit pengajuan');
            } finally {
                const btn = document.getElementById('btnSubmit');
                btn.disabled = false;
                btn.innerHTML = '<i class="fas fa-paper-plane mr-2"></i>Submit Pengajuan';
            }
        }

        function closeSuccessModal() {
            document.getElementById('successModal').classList.add('hidden');
            showPage('dashboard');
        }

        // ==========================================
        // HELPERS
        // ==========================================
        
        function getStatusColor(status) {
            const colors = {
                'DIPROSES': 'bg-yellow-100 text-yellow-800',
                'SELESAI': 'bg-green-100 text-green-800',
                'DITOLAK': 'bg-red-100 text-red-800'
            };
            return colors[status] || 'bg-gray-100 text-gray-800';
        }

        function formatDate(dateStr) {
            if (!dateStr) return '-';
            const date = new Date(dateStr);
            return date.toLocaleDateString('id-ID');
        }

        function formatNumber(num) {
            if (!num) return '0';
            return parseInt(num).toLocaleString('id-ID');
        }

        function filterTable() {
            const search = document.getElementById('searchInput').value.toLowerCase();
            const rows = document.querySelectorAll('#historyTableBody tr');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(search) ? '' : 'none';
            });
        }

        // ==========================================
        // INIT
        // ==========================================
        
        document.addEventListener('DOMContentLoaded', function() {
            // Set default date
            document.getElementById('tanggal').valueAsDate = new Date();
            
            // Load initial data
            loadDashboardData();
        });
    </script>
</body>
</html>
